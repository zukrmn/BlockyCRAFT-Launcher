{
  "name": "blockycraft-launcher",
  "private": true,
  "version": "0.1.0",
  "description": "BlockyCRAFT Launcher - Modern launcher for Minecraft Beta 1.7.3",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "svelte:dev": "vite",
    "electron:build": "node scripts/build-electron.mjs",
    "electron:start": "node scripts/start-electron.mjs",
    "dev": "npm run electron:build && concurrently -k \"npm run svelte:dev\" \"wait-on http://localhost:3000 && VITE_DEV_SERVER_URL=http://localhost:3000 npm run electron:start\"",
    "build": "npm run electron:build && vite build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json"
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tsconfig/svelte": "^5.0.6",
    "@types/node": "^20.0.0",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^33.0.0",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.24.0",
    "postcss": "^8.4.35",
    "svelte": "^5.1.0",
    "svelte-check": "^4.0.0",
    "tailwindcss": "^3.4.1",
    "typescript": "~5.4.0",
    "vite": "^5.4.11",
    "wait-on": "^7.2.0"
  }
}