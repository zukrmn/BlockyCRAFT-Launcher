{
  "name": "blockycraft-launcher",
  "private": true,
  "version": "0.1.0",
  "description": "BlockyCRAFT Launcher - Modern launcher for Minecraft Beta 1.7.3",
  "main": "dist-electron/main.cjs",
  "type": "module",
  "scripts": {
    "svelte:dev": "vite",
    "electron:build": "node scripts/build-electron.mjs",
    "electron:start": "node scripts/start-electron.mjs",
    "dev": "npm run electron:build && concurrently -k \"npm run svelte:dev\" \"wait-on http://localhost:3000 && VITE_DEV_SERVER_URL=http://localhost:3000 npm run electron:start\"",
    "build": "npm run electron:build && vite build",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.app.json"
  },
  "build": {
    "appId": "com.blockycraft.launcher",
    "productName": "BlockyCRAFT Launcher",
    "directories": {
      "output": "dist-out"
    },
    "files": [
      "dist-electron/**/*",
      "dist/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "public/vite.svg"
    }
  },
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "^4.0.0",
    "@tailwindcss/postcss": "^4.1.18",
    "@tsconfig/svelte": "^5.0.6",
    "@types/adm-zip": "^0.5.7",
    "@types/node": "^24.10.7",
    "autoprefixer": "^10.4.23",
    "concurrently": "^9.2.1",
    "electron": "^33.0.0",
    "electron-builder": "^26.4.0",
    "esbuild": "^0.25.6",
    "postcss": "^8.5.6",
    "svelte": "^5.43.8",
    "svelte-check": "^4.3.4",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.2.4",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "adm-zip": "^0.5.16"
  }
}
